{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmitOnError": false,  // Esto permite que se realice el build incluso si hay errores de tipo
    "strict": false,  // Esto desactiva las verificaciones estrictas
    "esModuleInterop": true,  // Asegura que puedas importar módulos comunes de Node.js
    "skipLibCheck": true,  // Opcional: salta la comprobación de tipos en archivos de definición de librerías
    "allowJs": true  // Permite archivos .js junto con .ts
  }
}